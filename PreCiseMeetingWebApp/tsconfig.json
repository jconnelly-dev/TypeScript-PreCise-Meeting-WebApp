    "rootDir": "./scripts",
    "target": "ES2015",
    "module": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [ "ES2015", "DOM" ]
